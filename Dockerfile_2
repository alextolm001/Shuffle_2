# ðŸ”¹ Basisimage met Python 3.8 en Debian Bullseye
FROM python:3.8-bullseye

# ðŸ”¹ Werkmap instellen
WORKDIR /app

# ðŸ”¹ Java installeren (voor eventuele Spark-verwerking)
RUN apt-get update && \
    apt-get install -y --no-install-recommends openjdk-11-jre-headless git && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# ðŸ”¹ Zet JAVA_HOME (vereist door Spark)
ENV JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64
ENV PATH="${JAVA_HOME}/bin:${PATH}"

# ðŸ”¹ Kopieer requirements en installeer dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# ðŸ”¹ Clone repo en haal de juiste scripts
RUN git clone https://github.com/alextolm001/shuffle_2.git /app/code && \
    cp /app/code/final_ranking.py . && \
    cp /app/code/verify_winner_mode.py .

# ðŸ”¹ Start beide scripts in volgorde via shell
CMD sh -c "python final_ranking.py && python verify_winner_mode.py"
